<Alloy>
	<Model src="movie" id="movie" instance="true" />
	<ScrollView id="scrollView">
		<Label id="title" text="{$.movie.original_title}" />
		<Label id="genres" text="{$.movie.genres}" />
		<ImageView id="image" image="{$.movie.poster_path}" />
		<Label id="rating" text="Rating: {$.movie.vote_average}" />

		<Label top="10" text="Synopsis:" />
		<Label class="italic" text="{$.movie.overview}" />
		
		
		<Button id="trailerBtn" class="button" title="Watch Trailer" onClick="watchTrailer" />
	</ScrollView>
</Alloy>