<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Default" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_default</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Default</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Default</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Default</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Default</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Default</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_default</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_default</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Default</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Default.Widget</item>

    </style>

    <style name="ActionBar.Solid.Default" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_default</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_default</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_default</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Default</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar.Transparent.Default" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_default</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Default</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Default.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Default</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Default</item>
    </style>

</resources>