<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Default" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_default</item>
        <item name="popupMenuStyle">@style/PopupMenu.Default</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Default</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Default</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Default</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Default</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Default</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Default.Widget</item>

    </style>

    <style name="ActionBar.Solid.Default" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_default</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_default</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_default</item>
        <item name="progressBarStyle">@style/ProgressBar.Default</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="ActionBar.Transparent.Default" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_default</item>
        <item name="progressBarStyle">@style/ProgressBar.Default</item>
    </style>
	
    <style name="PopupMenu.Default" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_default</item>	
    </style>
	
    <style name="DropDownListView.Default" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_default</item>
    </style>

    <style name="ActionBarTabStyle.Default" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_default</item>
    </style>
	
    <style name="DropDownNav.Default" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_default</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_default</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_default</item>
    </style>
    
    <style name="ProgressBar.Default" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_default</item>
    </style>
    
    <style name="ActionButton.CloseMode.Default" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_default</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Default.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Default</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Default</item>
    </style>

</resources>